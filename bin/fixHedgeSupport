#!/bin/bash

SIDE=${1:-sell}
SYMBOL=${2:-BTC}

grids=(
  "-f-400% -t-1500% 10% --bM -o200% -c3"
  "-f-450% -t-1500% 20% --bM --fH -o250%  -c3"
  "-f-500% -t-1500% 7% --bM -o400% -c3"
  "-f-500% -t-1500% 13% --bM --fH -o450% -c3"
)

for grid_def in "${grids[@]}"
  do
    grid_cmd="./bin/console sl:grid --symbol=${SYMBOL} ${SIDE} ${grid_def}"
    echo -e "${grid_cmd}\n  =>"
    eval "${grid_cmd}"
  done

