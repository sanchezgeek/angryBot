#!/bin/bash

SIDE=${1:-sell}
SYMBOL=${2:-BTC}

FROM1=${3:-400}
TO1=${4:-1500}
FROM2=${3:-450}
TO2=${4:-1500}
FROM3=${3:-500}
TO3=${4:-1500}
FROM4=${3:-500}
TO4=${4:-1500}

grids=(
  "-f-${FROM1}% -t-${TO1}% 10% --bM -o200% -c3"
  "-f-${FROM2}% -t-${TO2}% 20% --bM --fH -o250%  -c3"
  "-f-${FROM3}% -t-${TO3}% 7% --bM -o400% -c3"
  "-f-${FROM4}% -t-${TO4}% 13% --bM --fH -o450% -c3"
)

for grid_def in "${grids[@]}"
  do
    grid_cmd="./bin/console sl:grid --symbol=${SYMBOL} ${SIDE} ${grid_def}"
    echo -e "${grid_cmd}\n  =>"
    eval "${grid_cmd}"
  done

