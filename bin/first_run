#!/bin/bash
set -e

export DOCKER_BUILDKIT=0
export COMPOSE_DOCKER_CLI_BUILD=0

make prepare_files
make build ENV_BUILD_FILEPATH=${1:-.env.build}
make start
make composer "c=install"
make sf c="d:m:m -n"
make sf c="settings:dump:restore --auto"
#make sf c="symbol:initialize --coin=USDT"
make refresh
make restart
